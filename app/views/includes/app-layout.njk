{% extends "includes/layout.njk" %}

{% block body %}
<div class="nhsuk-grid-row">
  <div class="nhsuk-grid-column-full app-component-reading-width">

    <div class="app-pane">

        <div class="app-pane__side-bar">
          {% block sideNav %}
            {% include "./_side-nav.njk" %}
          {% endblock %}
        </div>

        <div class="app-pane__main-content">

          <h1 class="app-page-heading">
            {%- if landingPage or pageTitle == "Community" or pageTitle == "NHS service standard" %}
            {% else %}
            <span class="nhsuk-caption-l">
              {%- if subSection %}
                {%- if theme %}
                {{theme}}
                {% else %}
                {{subSection}}
                {% endif %}
              {% else %}
              {{pageSection}}
              {% endif %}
              <span class="nhsuk-u-visually-hidden"> - </span>
            </span>
            {% endif %}
            {{pageTitle}}
          </h1>

          {%- if hideDescription %}
          {% else %}
            <p class="nhsuk-lede-text app-lede-text">{{pageDescription}}</p>
          {% endif %}

          {% block bodyContent %}
          {% endblock %}

          {% block contactPanel %}
            {%- if landingPage or theme == "Design" or theme == "Content style guide" or pageTitle == "Support" %}
            {% else %}
              {% include "./_contact-panel.njk" %}
            {% endif %}
          {% endblock %}

          {%- if dateUpdated %}
          <div class="nhsuk-review-date app-review-date">
            <p class="nhsuk-body-s app-review-date__text">Updated: {{dateUpdated}}</p>
          </div>
          {% endif %}

        </div>
      </div>
    </div>
  </div>
{% endblock %}
